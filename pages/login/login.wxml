<!--index.wxml-->
<view class="container">
  <form class="form-login" bindsubmit="formSubmit">
    <view class="section title">
      <text>食堂招标小程序</text>
    </view>
    <view class="section inputbox">
      <input bindinput="changeUsername" placeholder="用户名"/>
    </view>
    <view class="section inputbox">
      <input bindinput="changePwd" placeholder="密码" type="password"/>
    </view>
    <button type="primary" size="default" bindtap="bindViewTap">
      登录
    </button>
  </form>
</view>
